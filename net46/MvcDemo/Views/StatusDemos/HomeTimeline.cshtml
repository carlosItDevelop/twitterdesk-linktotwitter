@model IEnumerable<MvcDemo.Models.TweetViewModel>
@{
    ViewBag.Title = "Home Timeline";
}

@{
    var simboloArroba = '@';
}

<div class="br-pagebody">
    <div class="br-section-wrapper">
        <h6 class="tx-gray-800 tx-uppercase tx-bold tx-14 mg-b-10">Sua Timeline</h6>
        <p class="mg-b-25 mg-lg-b-50">Últimos Tweets na sua Timeline. Trate a todos bem e seja recíproco. Só não vele dar Unfollow!</p>


        <a href="/StatusDemos/Index" class="btn btn-outline-info">Voltar para a Lista</a>
        <br /><br />



        <table class="table display responsive nowrap datatableTimeline" id="tml">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ImageUrl)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.ScreenName)
                    </th>


                    <th>
                        @Html.DisplayNameFor(model => model.Text)
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="pd-l-0-force">
                            <img src="@item.ImageUrl" alt="@item.ScreenName" class="wd-40 rounded-circle" />
                        </td>
                        <td>
                            <h6 class="tx-inverse tx-14 mg-b-0">@Html.DisplayFor(modelItem => item.ScreenName)</h6>
                            <span class="tx-12">"@simboloArroba@Html.DisplayFor(modelItem => item.ScreenName)"</span>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Text)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {

    <script>


        $('.datatableTimeline').DataTable({
            responsive: true,
            language: {
                searchPlaceholder: 'Busca...',
                sSearch: '',
                lengthMenu: '_MENU_ items/page',
            }
        });

        // Select2
        $('.dataTables_length select').select2({ minimumResultsForSearch: Infinity });


    </script>


}
