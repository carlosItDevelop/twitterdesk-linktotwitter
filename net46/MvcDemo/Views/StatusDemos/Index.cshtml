@{
    ViewBag.Title = "TwtterDesk - Status";
}


<div class="br-pagebody">
    <div class="br-section-wrapper">
        <h6 class="tx-gray-800 tx-uppercase tx-bold tx-14 mg-b-10">Lista de Funções</h6>

        <div class="br-section-wrapper">
            <h6 class="tx-gray-800 tx-uppercase tx-bold tx-14 mg-b-10">Twitter Desk - App</h6>
            <p class="mg-b-25 mg-lg-b-50">Funções do TwitterDesk. Entre e fique à vontade. Só não vele dar Unfollow!</p>
            <a href="/Home/Index" class="btn btn-info btn-large">Home</a>
            <a href="/StatusDemos/Index" class="btn btn-info btn-large">Funções</a>
            <br /><br />
            <div class="table-wrapper">
                <table class="table display responsive nowrap" id="datatableFuncoes">
                    <thead>
                        <tr>
                            <th colspan="5">TwitterDesk - Funções</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><a href="/StatusDemos/Tweet" class="btn btn-outline-info">Tweetar</a></td>
                            <td><a href="/StatusDemos/HomeTimeline" class="btn btn-outline-info">Timeline</a></td>
                            <td><a href="/StatusDemos/ListingFollowers" class="btn btn-outline-info">Seguidores Por ID</a></td>
                            <td><a href="/StatusDemos/Seguidores" class="btn btn-outline-info">Seguidores - Detalhes</a></td>
                            <td><a href="/StatusDemos/UploadImage" class="btn btn-outline-info">Upload de Image</a></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        $(function () {
            'use strict';

            $('#datatableFuncoes').DataTable({
                responsive: true,
                language: {
                    searchPlaceholder: 'Search...',
                    sSearch: '',
                    lengthMenu: '_MENU_ items/page',
                }
            });

            // Select2
            $('.dataTables_length select').select2({ minimumResultsForSearch: Infinity });

        })();

    </script>

}
