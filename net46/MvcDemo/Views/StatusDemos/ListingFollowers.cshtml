@model IEnumerable<MvcDemo.Models.FollowersViewModel>

@{
    ViewBag.Title = "Lista de Seguidores";
}


<div class="br-pagebody">
    <div class="br-section-wrapper">
        <h6 class="tx-gray-800 tx-uppercase tx-bold tx-14 mg-b-10">Twitter Desk - App</h6>
        <p class="mg-b-25 mg-lg-b-50">Seguidores por ID. Entre e fique à vontade. Só não vele dar Unfollow!</p>

        <a href="/StatusDemos/Index" class="btn btn-outline-info">Voltar para a Lista</a>
        <br /><br />

        <div class="table-wrapper">
            <table class="table display responsive nowrap" id="datatableListingFollowers">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserID)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserID)
                        </td>
                    </tr>
                }

            </table>
        </div>
        <a href="/StatusDemos/Index" class="btn btn-outline-info">Voltar para a Lista</a>
    </div>
</div>


@section Scripts {

    <script>
        $(function () {
            'use strict';

            $('#datatableListingFollowers').DataTable({
                responsive: true,
                language: {
                    searchPlaceholder: 'Search...',
                    sSearch: '',
                    lengthMenu: '_MENU_ items/page',
                }
            });

            // Select2
            $('.dataTables_length select').select2({ minimumResultsForSearch: Infinity });

        })();

    </script>


}