@{
    ViewBag.Title = "TwtterDesk - Status";
}


<div class="br-pagebody col-12">
    <div class="br-section-wrapper col-12">

        <h6 class="tx-gray-800 tx-uppercase tx-bold tx-14 mg-b-10">Lista de Funções</h6>

        <p class="mg-b-25 mg-lg-b-50">Funções do TwitterDesk. Entre e fique à vontade. Só não vele dar Unfollow!</p>
        <a href="/Home/Index" class="btn btn-info btn-large">Home</a>
        <br /><br />

        <table class="table display responsive datatableFuncoes" id="funcoes">
            <thead>
                <tr>
                    <th colspan="5">TwitterDesk - Funções</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="col-3"><a href="/StatusDemos/Tweet" class="btn btn-outline-info col-8">Tweetar</a></td>
                </tr>
                <tr>
                    <td class="col-3"><a href="/StatusDemos/HomeTimeline" class="btn btn-outline-info col-8">Timeline</a></td>
                </tr>
                <tr>
                    <td class="col-3"><a href="/StatusDemos/ListingFollowers" class="btn btn-outline-info col-8">Seguidores Por ID</a></td>
                </tr>
                <tr>
                    <td class="col-3"><a href="/StatusDemos/Seguidores" class="btn btn-outline-info col-8">Seguidores - Detalhes</a></td>
                </tr>
                <tr>
                    <td class="col-3"><a href="/StatusDemos/TrendTopics" class="btn btn-outline-info col-8">Trend Topics</a></td>
                </tr>
                <tr>
                    <td class="col-3"><a href="/StatusDemos/TrendsLocator" class="btn btn-outline-info col-8">Trends Locator</a></td>
                </tr>
                <tr>
                    <td class="col-3"><a href="/StatusDemos/UploadImage" class="btn btn-outline-info col-8">Upload de Image</a></td>
                </tr>
            </tbody>
        </table>

    </div>
</div>

@section Scripts {
    <script>
        $('.datatableFuncoes').DataTable({
            responsive: true,
            language: {
                searchPlaceholder: 'Busca...',
                sSearch: '',
                lengthMenu: '_MENU_ Itens por Página',
            }
        });

        // Select2
        $('.dataTables_length select').select2({ minimumResultsForSearch: Infinity });
    </script>
}
