@model IEnumerable<MvcDemo.Models.SeguidoresViewModel>

@{
    ViewBag.Title = "Lista de Seguidores";
}

@{
    var simboloArroba = '@';
}

<div class="br-pagebody col-12">
    <div class="br-section-wrapper col-12">
        <h6 class="tx-gray-800 tx-uppercase tx-bold tx-14 mg-b-10">Lista de Seguidores</h6>
        <p class="mg-b-25 mg-lg-b-50">Lista dos seguidores. Esses são seus amigos. Trate-os bem e seja recíproco. Só não vele dar Unfollow!</p>


        <a href="/StatusDemos/Index" class="btn btn-outline-info">Voltar para a Lista</a>
        <br /><br />

        <table id="flw" class="table display responsive nowrap datatableSeguidores">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ProfileImageUrl)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.ScreenNameResponse)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.UserIDResponse)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Verified)
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>

                        <td class="pd-l-0-force">
                            <img src="@item.ProfileImageUrl" alt="@item.ScreenNameResponse" class="wd-40 rounded-circle" />
                        </td>
                        <td>
                            <h6 class="tx-inverse tx-14 mg-b-0">@Html.DisplayFor(modelItem => item.ScreenNameResponse)</h6>
                            <span class="tx-12">"@simboloArroba@Html.DisplayFor(modelItem => item.ScreenNameResponse)"</span>
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.UserIDResponse)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Verified)
                        </td>

                    </tr>
                }

            </tbody>
        </table>
        <br />
        <a href="/StatusDemos/Index" class="btn btn-outline-info">Voltar para a Lista</a>
        <br />

    </div>
</div>
<!-- br-pagebody -->

@section Scripts {

    <script>
            $('.datatableSeguidores').DataTable({
                responsive: true,
                language: {
                    searchPlaceholder: 'Busca...',
                    sSearch: '',
                    lengthMenu: '_MENU_ items/page',
                }
            });

            // Select2
            $('.dataTables_length select').select2({ minimumResultsForSearch: Infinity });
    </script>
}
