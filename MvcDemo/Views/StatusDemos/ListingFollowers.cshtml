@model IEnumerable<MvcDemo.Models.FollowersViewModel>

@{
    ViewBag.Title = "Lista de Seguidores";
}


<div class="br-pagebody col-12">
    <div class="br-section-wrapper col-12">

        <h6 class="tx-gray-800 tx-uppercase tx-bold tx-14 mg-b-10">Twitter Desk - App</h6>
        <p class="mg-b-25 mg-lg-b-50">Seguidores por ID. Entre e fique à vontade. Só não vele dar Unfollow!</p>

        <table id="flw" class="table display responsive nowrap datatableListaId">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserID)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserID)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br /><br />
        <a href="/StatusDemos/Index" class="btn btn-outline-info">Volte à Lista</a>


    </div>
</div>
<!-- br-pagebody -->


@section Scripts {
    <script>
        $('.datatableListaId').DataTable({
            responsive: true,
            language: {
                searchPlaceholder: 'Busca...',
                sSearch: '',
                lengthMenu: '_MENU_ items/page',
            }
        });

        $('.dataTables_length select').select2({ minimumResultsForSearch: Infinity });
    </script>
}
